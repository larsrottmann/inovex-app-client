<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	<Button android:text="@string/list_journeys" 
	    		android:id="@+id/button_list_journeys"
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:drawableLeft="@drawable/travel_icon"
	    		android:layout_weight="1">
	    </Button>
	    <Button android:text="@string/enter_journey" 
	    		android:id="@+id/button_enter_journey"
	    		android:drawableLeft="@drawable/create_new_content"
	    		android:layout_width="wrap_content" 
	    		android:layout_weight="1"
	    		android:layout_height="wrap_content">
	    </Button>
    </LinearLayout>
   <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    <Button android:text="@string/list_receipts"  
    		android:id="@+id/button_list_receipts"
    		android:layout_width="wrap_content" 
    		android:drawableLeft="@drawable/receipt_icon"
    		android:layout_weight="1"
    		android:layout_height="wrap_content">
    </Button>
    <Button android:text="@string/enter_receipt" 
    		android:id="@+id/button_enter_receipt"
    		android:layout_width="wrap_content" 
    		android:layout_weight="1"
    		android:drawableLeft="@drawable/create_new_content"
    		android:layout_height="wrap_content">
    </Button>
    </LinearLayout>
   <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	<Button android:text="@string/list_times"  
    		android:id="@+id/button_list_times"
    		android:layout_width="wrap_content" 
    		android:drawableLeft="@drawable/time_icon"
    		android:layout_weight="1"
    		android:layout_height="wrap_content">
	    </Button>
	    <Button android:text="@string/enter_time" 
	    		android:id="@+id/button_enter_time"
	    		android:layout_width="wrap_content" 
	    		android:drawableLeft="@drawable/create_new_content"
	    		android:layout_weight="1"
	    		android:layout_height="wrap_content">
	    </Button>
    	<Button android:text="@string/list_contacts"
    		android:id="@+id/button_list_contacts"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:drawableLeft="@drawable/create_new_content" />
    </LinearLayout>
</LinearLayout>
