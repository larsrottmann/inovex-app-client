		    	android:layout_height="wrap_content"
		    	android:layout_gravity="center_vertical"
		    />
		    <TextView 
		    	android:id="@+id/textview_destination"
	    		android:gravity="center_horizontal"		    		
		    	android:layout_weight="5"
		    	android:layout_width="0dip"
