<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
        <!-- 
		<stroke android:width="2dip" android:color="@color/inovex_dark_grey" />
		 -->
		<solid android:color="@color/inovex_dark_grey"/>
            <padding
                android:left="6dp"
                android:top="3dp"
                android:right="6dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/inovex_orange" />
            <padding
                android:left="6dp"
                android:top="3dp"
                android:right="6dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item>        
        <shape>
        <!-- 
		<stroke android:width="2dip" android:color="@color/inovex_dark_grey" />
		 -->
		<solid android:color="#00ffffff"/>
            <padding
                android:left="6dp"
                android:top="3dp"
                android:right="6dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>