<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/grey3"
                android:endColor="@color/grey5"
                android:angle="270" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="6dp"
                android:top="3dp"
                android:right="6dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/grey2"
                android:startColor="@color/grey3"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/grey5" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="6dp"
                android:top="3dp"
                android:right="6dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/grey5"
                android:startColor="@color/grey6"
                android:angle="270" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="6dp"
                android:top="3dp"
                android:right="6dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>